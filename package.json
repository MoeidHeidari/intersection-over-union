{
    "name": "intersection",
    "version": "0.0.1",
    "description": "intersection is a serice that provides APIs to measure the overlap between two bounding boxes.",
    "author": "Moeid Heidari",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "seed": "NODE_ENV=development ts-node src/seeder.ts --watch --config seeder-cli.json",
        "start": "nest start",
        "start:dev": "NODE_ENV=development nest start --watch",
        "start:debug": "NODE_ENV=development nest start --debug --watch",
        "start:prod": "NODE_ENV=production node dist/main",
        "daemon": "nest build --webpack --webpackPath webpack-hmr.config.js",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:ci": "jest --ci",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./__test__/jest-e2e.json",
        "doc": "./node_modules/.bin/compodoc -p tsconfig.json -w -s -r 7000 --theme 'readthedocs'"
    },
    "dependencies": {
        "@compodoc/compodoc": "^1.1.19",
        "@kafkajs/confluent-schema-registry": "^1.0.6",
        "@nestjs/common": "^8.4.4",
        "@nestjs/config": "^2.0.0",
        "@nestjs/core": "^8.4.4",
        "@nestjs/microservices": "^8.4.4",
        "@nestjs/mongoose": "^9.0.3",
        "@nestjs/platform-express": "^8.4.4",
        "@types/dotenv-flow": "^3.1.0",
        "@types/faker": "^5.1.4",
        "@types/kafkajs": "^1.9.0",
        "@types/morgan": "^1.9.2",
        "@types/ramda": "^0.27.38",
        "@types/uuidv4": "^5.0.0",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.13.2",
        "dotenv": "^8.2.0",
        "dotenv-expand": "^5.1.0",
        "dotenv-flow": "^3.2.0",
        "faker": "^5.1.0",
        "kafkajs": "^1.15.0",
        "mongoose": "^5.11.15",
        "morgan": "^1.10.0",
        "ramda": "^0.27.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.3",
        "start-server-webpack-plugin": "^2.2.5",
        "tsc-watch": "^4.2.9",
        "uuidv4": "^6.2.5"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.2.5",
        "@nestjs/schematics": "^7.1.2",
        "@nestjs/testing": "^8.4.4",
        "@types/express": "^4.17.8",
        "@types/express-promise-router": "^3.0.0",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.6",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.6.0",
        "@typescript-eslint/parser": "^4.6.0",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.6.1",
        "prettier": "^2.1.2",
        "prettier-eslint": "^11.0.0",
        "supertest": "^6.0.1",
        "ts-jest": "^26.4.3",
        "ts-loader": "^8.0.7",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.5"
    }
}
